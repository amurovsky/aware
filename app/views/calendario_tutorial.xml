<Alloy>
	<View class="container">
		<View class="statusBar" platform="ios"></View>
		<View class="navigationBar">
			<Button class="btnMenu" onClick="cerrarVentana">Menú</Button>
			<Label class="navTitle">Registra tus Fechas</Label>
		</View>
		<View class="navSeparator"></View>
		<View id="div_main">
			<ImageView id="img_back"></ImageView>
			<View id="div_info">
				<Label id="lbl_titulo">Toca un día y agrega información</Label>
				<Label id="lbl_descripcion">Registra tus fechas de inicio y fin de ciclo, y te ayudaremos a conocer los mejores días para practicar tu autoexploración.</Label>
				<View id="div_iconografia">
				    <View  id="div_left" class="infoSplit">
				        <View class="infoView">
				            <ImageView class="iconImage"></ImageView>
                            <Label class="infoLabel">Día de inicio \nde tu ciclo</Label>
				        </View>
                        <View id="separatorLeft" class="separador"></View>
                        <View class="infoView">
                            <ImageView class="iconImage"></ImageView>
                            <Label class="infoLabel">Día de fin \nde tu ciclo</Label>
                        </View>
				    </View>
				    <View id="div_right" class="infoSplit">
				        <View class="infoView">
				            <ImageView class="iconImage"></ImageView>
                            <Label class="infoLabel">Días para \nautoexploración</Label>
				        </View>
				        <View id="separatorRight" class="separador"></View>
				        <View class="infoView">
				            <ImageView class="iconImage"></ImageView>
                            <Label class="infoLabel">Días de \ntu ciclo</Label>
				        </View>
				    </View>
				</View>
				<Button id="btn_comenzar" onClick="btnComenzar_click">Comenzar</Button>
			</View>
		</View>
	</View>
</Alloy>